        <!--            <option value="Internet Explorer">-->
        <!--            <option value="Firefox">-->
        <!--            <option value="Chrome">-->
        <!--            <option value="Opera">-->
        <!--            <option value="Safari">-->
        <!--          </datalist>-->

        </form>

    </div>
    
    <button id="breakdown">Check Breakdown</button>

<script src='/invoiceScreen.js'></script>
<% include partials/footer %>